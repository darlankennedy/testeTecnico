<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor configVersion="3">
    <paths>
        <!-- diretórios com seu código -->
        <directory>app</directory>
        <directory>src</directory>
    </paths>

    <ignore>
        <!-- ignore o que não é código-fonte -->
        <path>vendor</path>
        <path>storage</path>
        <path>bootstrap</path>
        <path>node_modules</path>
        <path>tests</path>
    </ignore>

    <versions>
        <version number="main">
            <api>
                <source dsn=".">
                    <path>app</path>
                    <path>src</path>
                </source>
                <ignore>
                    <path>vendor</path>
                    <path>storage</path>
                    <path>bootstrap</path>
                    <path>node_modules</path>
                    <path>tests</path>
                </ignore>
            </api>
            <output>
                <targets>
                    <folder>docs/api</folder>
                </targets>
                <template name="default" />
            </output>
        </version>
    </versions>
</phpdocumentor>
